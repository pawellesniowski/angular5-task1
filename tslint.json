{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": [
      false,
      "always-prefix"
    ],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true,
    "max-classes-per-file": false,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "pipe-naming": [
      true,
      "camelCase"
    ],
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    "member-ordering": [
      false
    ],
    "no-console": [
      true,
      "log",
      "warn",
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      240
    ],
    "no-string-literal": false,
    "no-use-before-declare": false,
    "object-literal-sort-keys": false,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "ordered-imports": [
      true
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "no-reference": false,
    "no-multi-spaces": true,
    "ban": [
      true,
      {
        "name": "fit",
        "message": "Prevent focused test suits to commit"
      },
      {
        "name": "fdescribe",
        "message": "Prevent focused test suits to commit"
      }
    ],
    "no-inferrable-types": [
      true
    ],
    "block-spacing": [
      true,
      "always"
    ],
    "space-in-parens": [
      true,
      "never"
    ],
    "arrow-return-shorthand": [
      true,
      "multiline"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "ter-func-call-spacing": [
      true,
      "never"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsdoc-format": false
  }
}
